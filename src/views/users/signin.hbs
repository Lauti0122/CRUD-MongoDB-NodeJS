<div class="row">
    <div class="col-md-3 mx-auto">
<div class="card mt-4 text-center">
    <div class="card-header">
        <h3>Account Login</h3>
    </div>
    <img src="https://img.icons8.com/color/480/mongodb.png" class="rounded-circle mx-auto d-block m-4 logo" alt="logo">
    <div class="card-body">

        <form action="/users/signin" method="POST">
            <div class="form-group">
                <input type="email" class="form-control" name="email" placeholder="Enter your email" autofocus >
            </div>

            <div class="form-group">
                <input type="password" class="form-control" name="password" placeholder="Enter your password" autofocus >
            </div>

            <div class="form-group">
               <button type="submit" class="btn btn-primary btn-block"> Sign In</button>
            </div>
        </form>

    </div>
</div>

    </div>
</div>